{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Docker (Mongo+Redis)",
      "type": "shell",
      "command": "docker-compose -f docker/dev/docker-compose.yml up -d",
      "group": "build"
    },
    {
      "label": "Dev: Backend (FastAPI)",
      "type": "shell",
      "command": "pnpm dev:backend",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Dev: Frontend (Vite)",
      "type": "shell",
      "command": "pnpm dev:frontend",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      }
    },
    {
      "label": "Dev: Start All",
      "dependsOn": [
        "Dev: Backend (FastAPI)",
        "Dev: Frontend (Vite)"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
